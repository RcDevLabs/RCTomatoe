$color-red = #FF222F
$color-timer = #F2F2F2
*
	box-sizing border-box

#rcTomatoe
	position relative
	display block
	margin 0 auto
	width 300px
	height 300px
	border-radius 100%
	background $color-red
	padding 4em 1em
#timer
	width 100%
	text-align center
	font-size 2em
	display block
	color $color-timer
#controls
	margin-top 1em
	width 100%
	text-align center